{
  "name": "financen",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "gulp build",
    "build:prod": "cross-env NODE_ENV=production gulp build",
    "start": "gulp",
    "deploy": "cross-env NODE_ENV=production gulp deploy",
    "generate-fonts": "gulp generate-fonts",
    "stylelint": "stylelint src/**/*.scss",
    "prettier": "concurrently \"npm run prettier:html\" \"npm run prettier:scss\"",
    "prettier:html": "prettier --write src/index.html",
    "prettier:scss": "prettier --write src/**/*.scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.html": [
      "prettier:html",
      "git add"
    ],
    ".scss": [
      "prettier:scss",
      "stylelint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konartur/Financen.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/konartur/Financen/issues"
  },
  "homepage": "https://github.com/konartur/Financen#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "browser-sync": "^2.27.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.6",
    "del": "^6.0.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-inject": "^5.0.5",
    "gulp-postcss": "^9.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-ttf2woff": "^1.1.1",
    "gulp-ttf2woff2": "^4.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "prettier": "2.3.2",
    "sass": "^1.35.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0"
  }
}
